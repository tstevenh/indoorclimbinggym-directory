---
/**
 * BlogCard Component
 * Displays a preview card for a blog post
 */

interface Props {
  slug: string;
  title: string;
  description: string;
  publishedDate: Date;
  author: string;
  category: string;
  heroImage: string;
  heroImageAlt: string;
  readingTime?: number;
}

const {
  slug,
  title,
  description,
  publishedDate,
  author,
  category,
  heroImage,
  heroImageAlt,
  readingTime,
} = Astro.props;

// Format date
const formattedDate = publishedDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Category colors
const categoryColors: { [key: string]: string } = {
  guides: 'bg-blue-100 text-blue-800',
  tips: 'bg-green-100 text-green-800',
  reviews: 'bg-purple-100 text-purple-800',
  industry: 'bg-orange-100 text-orange-800',
  gear: 'bg-red-100 text-red-800',
};

const categoryColor = categoryColors[category] || 'bg-gray-100 text-gray-800';
---

<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
  <a href={`/blog/${slug}`} class="block">
    <div class="aspect-video w-full overflow-hidden bg-gray-200">
      <img
        src={heroImage}
        alt={heroImageAlt}
        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
        loading="lazy"
      />
    </div>
  </a>

  <div class="p-6">
    <div class="flex items-center gap-2 mb-3">
      <span class={`text-xs font-semibold px-3 py-1 rounded-full ${categoryColor}`}>
        {category.charAt(0).toUpperCase() + category.slice(1)}
      </span>
      {readingTime && (
        <span class="text-xs text-gray-500">
          {readingTime} min read
        </span>
      )}
    </div>

    <a href={`/blog/${slug}`} class="block group">
      <h3 class="text-xl font-bold text-granite mb-2 group-hover:text-sage transition-colors line-clamp-2">
        {title}
      </h3>
    </a>

    <p class="text-gray-600 mb-4 line-clamp-3">
      {description}
    </p>

    <div class="flex items-center justify-between text-sm text-gray-500">
      <span class="font-medium">{author}</span>
      <time datetime={publishedDate.toISOString()}>{formattedDate}</time>
    </div>
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
