---
/**
 * AuthorBio Component
 * Displays author information
 */

interface Props {
  author?: string;
  bio?: string;
  avatar?: string;
}

const {
  author = 'Indoor Climbing Gym Team',
  bio = author === 'Indoor Climbing Gym Team'
    ? 'The Indoor Climbing Gym team is dedicated to helping climbers find the perfect gym and improve their climbing skills. We share expert advice, gym reviews, and climbing tips from our community of passionate climbers.'
    : `${author} is a passionate climber and contributor to IndoorClimbingGym.com, sharing insights and experiences from the climbing community.`,
  avatar = '/logo.svg',
} = Astro.props;
---

<div class="bg-gray-50 rounded-lg p-6 my-8">
  <div class="flex items-start gap-4">
    <img
      src={avatar}
      alt={author}
      class="w-16 h-16 rounded-full object-cover flex-shrink-0"
      loading="lazy"
    />
    <div>
      <h3 class="font-bold text-lg text-granite mb-1">About {author}</h3>
      <p class="text-gray-600 text-sm leading-relaxed">{bio}</p>
    </div>
  </div>
</div>
