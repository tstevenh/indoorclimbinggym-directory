---
/**
 * AsSeenOn Component
 * Displays media mentions to build social proof.
 */

const mentions = [
  {
    name: "Training For Climbing",
    url: "https://trainingforclimbing.com/climbing-gym-grade-variance-and-training-system/",
    logo: "/images/tfc-logo.webp"
  }
];
---

<section class="py-8 md:py-12 mb-12">
  <div class="text-center">
    <p class="text-base font-semibold text-granite/60 uppercase tracking-widest mb-8">As Featured In</p>
    
    <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16">
      {mentions.map(mention => (
        <a 
          href={mention.url}
          target="_blank" 
          rel="noopener noreferrer"
          class="group flex items-center justify-center transition-all duration-300 hover:-translate-y-1"
        >
          {mention.logo ? (
            <img 
              src={mention.logo} 
              alt={`${mention.name} logo`} 
              class="h-14 md:h-16 w-auto opacity-70 grayscale group-hover:grayscale-0 group-hover:opacity-100 transition-all duration-300"
            />
          ) : (
            <span class="text-xl md:text-2xl font-extrabold text-granite group-hover:text-sage transition-colors tracking-tight">
              {mention.name}
            </span>
          )}
        </a>
      ))}
    </div>
  </div>
</section>