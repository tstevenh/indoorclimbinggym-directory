---
import BaseLayout from '../layouts/BaseLayout.astro';
import { API_BASE_URL } from '../config/api';

// Force SSR - this page should never be statically generated
export const prerender = false;

interface FreshRouteGym {
  id: string;
  gym_name: string;
  neighborhood: string | null;
  climbing_type: 'bouldering' | 'ropes' | 'both';
  last_reset_at: string;
  reset_frequency: string;
  confidence_level: 'confirmed' | 'likely' | 'estimated';
  source: string | null;
  notes: string | null;
  days_since_reset: number;
  freshness_label: 'fresh' | 'recent' | 'old';
}

interface FreshRoutesResponse {
  gyms: FreshRouteGym[];
  counts: {
    total: number;
    fresh: number;
    recent: number;
    old: number;
  };
  grouped: {
    fresh: FreshRouteGym[];
    recent: FreshRouteGym[];
    old: FreshRouteGym[];
  };
  last_updated: string;
}

// Fetch fresh routes data from API
let freshRoutesData: FreshRoutesResponse | null = null;
let error: string | null = null;

try {
  const response = await fetch(`${API_BASE_URL}/api/fresh-routes`, {
    headers: {
      'Accept': 'application/json',
    },
  });

  if (!response.ok) {
    throw new Error(`API returned ${response.status}`);
  }

  freshRoutesData = await response.json();
} catch (e) {
  console.error('Error fetching fresh routes:', e);
  error = 'Unable to load fresh routes data. Please try again later.';
}

const { grouped, counts } = freshRoutesData || { grouped: { fresh: [], recent: [], old: [] }, counts: { total: 0, fresh: 0, recent: 0, old: 0 } };

function formatClimbingType(type: string): string {
  if (type === 'bouldering') return 'Bouldering';
  if (type === 'ropes') return 'Ropes';
  return 'Both';
}

function formatDaysAgo(days: number): string {
  if (days === 0) return 'Reset Today';
  if (days === 1) return 'Reset Yesterday';
  return `Reset ~${days} Days Ago`;
}

// Helper to get formatted date
const currentDate = new Date().toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' });
