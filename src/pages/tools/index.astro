---
/**
 * Tools Hub Page
 * Central directory for all climbing tools
 */

export const prerender = true;

import BaseLayout from '../../layouts/BaseLayout.astro';

const pageUrl = 'https://www.indoorclimbinggym.com/tools';
const title = 'Free Climbing Tools | Grade Converters & More';
const description = 'Free climbing tools: grade converters for bouldering & sport climbing, gym finder, and training resources. No signup required.';
const keywords = [
  'climbing tools',
  'grade converter',
  'climbing calculator',
  'climbing resources',
  'bouldering tools',
  'sport climbing tools'
];

// CollectionPage schema
const schema = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: 'Climbing Tools & Resources',
  description: 'Free tools and calculators for climbers',
  url: pageUrl,
  hasPart: [
    {
      '@type': 'WebApplication',
      name: 'Bouldering Grade Converter',
      url: 'https://www.indoorclimbinggym.com/tools/bouldering-grade-conversion',
      applicationCategory: 'UtilitiesApplication',
      offers: { '@type': 'Offer', price: '0' }
    },
    {
      '@type': 'WebApplication',
      name: 'Sport Climbing Grade Converter',
      url: 'https://www.indoorclimbinggym.com/tools/sport-climbing-grade-conversion',
      applicationCategory: 'UtilitiesApplication',
      offers: { '@type': 'Offer', price: '0' }
    },
    {
      '@type': 'WebApplication',
      name: 'Cost Per Climb Calculator',
      url: 'https://www.indoorclimbinggym.com/tools/cost-per-climb-calculator',
      applicationCategory: 'UtilitiesApplication',
      offers: { '@type': 'Offer', price: '0' }
    }
  ]
};

const breadcrumbs = [
  { label: 'Home', url: '/' },
  { label: 'Tools', url: '/tools' },
];
---

<BaseLayout
  title={title}
  description={description}
  canonical={pageUrl}
  keywords={keywords}
  schema={schema}
  breadcrumbs={breadcrumbs}
>
  <!-- Full-Width Hero Section -->
  <section class="w-screen relative left-1/2 right-1/2 -ml-[50vw] -mr-[50vw] -mt-8 bg-gradient-to-br from-sage/20 via-ivory to-sage/5 py-20 md:py-28 overflow-hidden">
    <!-- Decorative background elements -->
    <div class="absolute top-0 left-0 w-full h-full opacity-10 bg-[radial-gradient(#98a48b_1px,transparent_1px)] [background-size:20px_20px]"></div>
    
    <div class="container mx-auto px-4 relative z-10 text-center">
      <span class="inline-block py-1 px-3 rounded-full bg-sage/10 text-sage font-bold text-sm tracking-wide uppercase mb-6">
        Free Resources
      </span>
      <h1 class="text-5xl md:text-6xl font-bold text-granite mb-6 leading-tight">
        Climbing Tools & <span class="text-sage relative inline-block">
          Resources
          <svg class="absolute w-full h-3 -bottom-1 left-0 text-sage/30" viewBox="0 0 100 10" preserveAspectRatio="none">
            <path d="M0 5 Q 50 10 100 5" stroke="currentColor" stroke-width="8" fill="none" />
          </svg>
        </span>
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
        Everything you need to climb smarter and progress faster.
      </p>
    </div>
  </section>

  <!-- Tools Grid -->
  <section class="container mx-auto px-4 -mt-16 relative z-20 mb-20">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">

      <!-- Bouldering Grade Converter -->
      <a
        href="/tools/bouldering-grade-conversion"
        class="group bg-white rounded-2xl shadow-xl border border-gray-100 p-8 hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 flex flex-col relative overflow-hidden"
      >
        <div class="absolute top-0 right-0 p-8 opacity-5 group-hover:opacity-10 transition-opacity">
           <svg class="w-32 h-32 text-sage" fill="currentColor" viewBox="0 0 24 24"><path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/></svg>
        </div>

        <div class="flex items-start gap-6 mb-6 relative z-10">
          <div class="w-16 h-16 bg-sage/10 rounded-2xl flex items-center justify-center text-sage group-hover:bg-sage transition-colors duration-300 flex-shrink-0 shadow-sm">
            <svg class="w-8 h-8 text-sage group-hover:!text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
          <div>
            <h2 class="text-2xl font-bold text-granite mb-2 group-hover:text-sage transition-colors">
              Bouldering Grade Converter
            </h2>
            <p class="text-gray-600 mb-4 leading-relaxed">
              Convert between V-Scale, Fontainebleau, and UK Tech grades instantly. Includes gym vs outdoor adjustment.
            </p>
            <div class="flex flex-wrap gap-2">
              <span class="bg-gray-50 text-gray-600 text-xs font-bold px-3 py-1 rounded-full border border-gray-100">V-Scale</span>
              <span class="bg-gray-50 text-gray-600 text-xs font-bold px-3 py-1 rounded-full border border-gray-100">Font</span>
              <span class="bg-gray-50 text-gray-600 text-xs font-bold px-3 py-1 rounded-full border border-gray-100">UK Tech</span>
            </div>
          </div>
        </div>

        <div class="mt-auto pt-6 border-t border-gray-50 flex items-center justify-between text-sage font-bold group-hover:gap-4 transition-all relative z-10">
          <span>Use Converter</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </div>
      </a>

      <!-- Sport Climbing Grade Converter -->
      <a
        href="/tools/sport-climbing-grade-conversion"
        class="group bg-white rounded-2xl shadow-xl border border-gray-100 p-8 hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 flex flex-col relative overflow-hidden"
      >
        <div class="absolute top-0 right-0 p-8 opacity-5 group-hover:opacity-10 transition-opacity">
           <svg class="w-32 h-32 text-sage" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/></svg>
        </div>

        <div class="flex items-start gap-6 mb-6 relative z-10">
          <div class="w-16 h-16 bg-sage/10 rounded-2xl flex items-center justify-center text-sage group-hover:bg-sage transition-colors duration-300 flex-shrink-0 shadow-sm">
            <svg class="w-8 h-8 text-sage group-hover:!text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
            </svg>
          </div>
          <div>
            <h2 class="text-2xl font-bold text-granite mb-2 group-hover:text-sage transition-colors">
              Sport Grade Converter
            </h2>
            <p class="text-gray-600 mb-4 leading-relaxed">
              Convert between YDS, French, and UIAA grading systems. Perfect for international climbing trips.
            </p>
            <div class="flex flex-wrap gap-2">
              <span class="bg-gray-50 text-gray-600 text-xs font-bold px-3 py-1 rounded-full border border-gray-100">YDS</span>
              <span class="bg-gray-50 text-gray-600 text-xs font-bold px-3 py-1 rounded-full border border-gray-100">French</span>
              <span class="bg-gray-50 text-gray-600 text-xs font-bold px-3 py-1 rounded-full border border-gray-100">UIAA</span>
            </div>
          </div>
        </div>

        <div class="mt-auto pt-6 border-t border-gray-50 flex items-center justify-between text-sage font-bold group-hover:gap-4 transition-all relative z-10">
          <span>Use Converter</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </div>
      </a>

      <!-- Cost Per Climb Calculator -->
      <a
        href="/tools/cost-per-climb-calculator"
        class="group bg-white rounded-2xl shadow-xl border border-gray-100 p-8 hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 flex flex-col relative overflow-hidden"
      >
        <div class="absolute top-0 right-0 p-8 opacity-5 group-hover:opacity-10 transition-opacity">
           <svg class="w-32 h-32 text-sage" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.31-8.86c-1.77-.45-2.34-.94-2.34-1.67 0-.84.79-1.43 2.1-1.43 1.38 0 1.9.66 1.94 1.64h1.71c-.05-1.34-.87-2.57-2.49-2.97V5H10.9v1.69c-1.51.32-2.72 1.3-2.72 2.81 0 1.79 1.49 2.69 3.66 3.21 1.95.46 2.34 1.15 2.34 1.87 0 .53-.39 1.39-2.1 1.39-1.6 0-2.23-.72-2.32-1.64H8.04c.1 1.7 1.36 2.66 2.86 2.97V19h2.34v-1.67c1.52-.29 2.72-1.16 2.73-2.77-.01-2.2-1.9-2.96-3.66-3.42z"/></svg>
        </div>

        <div class="flex items-start gap-6 mb-6 relative z-10">
          <div class="w-16 h-16 bg-sage/10 rounded-2xl flex items-center justify-center text-sage group-hover:bg-sage transition-colors duration-300 flex-shrink-0 shadow-sm">
            <svg class="w-8 h-8 text-sage group-hover:!text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <h2 class="text-2xl font-bold text-granite mb-2 group-hover:text-sage transition-colors">
              Cost Per Climb Calculator
            </h2>
            <p class="text-gray-600 mb-4 leading-relaxed">
              Compare day pass vs membership costs. Find the break-even point and calculate annual savings based on your climbing frequency.
            </p>
            <div class="flex flex-wrap gap-2">
              <span class="bg-gray-50 text-gray-600 text-xs font-bold px-3 py-1 rounded-full border border-gray-100">Day Pass</span>
              <span class="bg-gray-50 text-gray-600 text-xs font-bold px-3 py-1 rounded-full border border-gray-100">Membership</span>
              <span class="bg-gray-50 text-gray-600 text-xs font-bold px-3 py-1 rounded-full border border-gray-100">Savings</span>
            </div>
          </div>
        </div>

        <div class="mt-auto pt-6 border-t border-gray-50 flex items-center justify-between text-sage font-bold group-hover:gap-4 transition-all relative z-10">
          <span>Use Calculator</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </div>
      </a>

    </div>
  </section>

  <!-- Coming Soon Section -->
  <section class="py-20 bg-gray-50/50">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="text-center mb-12">
         <span class="text-sage font-bold text-sm tracking-wide uppercase mb-2 inline-block">In Development</span>
         <h2 class="text-3xl font-bold text-granite">Coming Soon</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Route Difficulty Finder -->
        <div class="bg-white border border-gray-100 rounded-2xl p-8 shadow-sm opacity-70 hover:opacity-100 transition-opacity">
          <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center text-gray-400 mb-6">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-800 mb-2">Route Finder by Grade</h3>
          <p class="text-sm text-gray-500 leading-relaxed">
            Find gyms near you with routes at your specific climbing level.
          </p>
        </div>

        <!-- Training Plan Generator -->
        <div class="bg-white border border-gray-100 rounded-2xl p-8 shadow-sm opacity-70 hover:opacity-100 transition-opacity">
          <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center text-gray-400 mb-6">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-800 mb-2">Training Plan Generator</h3>
          <p class="text-sm text-gray-500 leading-relaxed">
            Get personalized training plans based on your goals and current level.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20">
    <div class="container mx-auto px-4 max-w-5xl">
      <div class="bg-sage rounded-3xl p-10 md:p-16 text-center text-white shadow-2xl relative overflow-hidden">
        <!-- Decorative blobs -->
        <div class="absolute top-0 left-0 w-64 h-64 bg-white opacity-10 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
        <div class="absolute bottom-0 right-0 w-64 h-64 bg-white opacity-10 rounded-full blur-3xl translate-x-1/2 translate-y-1/2"></div>
        
        <div class="relative z-10">
           <h2 class="text-3xl md:text-4xl font-bold mb-6">Find Your Perfect Climbing Gym</h2>
           <p class="text-xl text-white/90 mb-10 max-w-2xl mx-auto">
             Use our tools to understand your climbing level, then find gyms that match your goals.
           </p>
           <div class="flex flex-col sm:flex-row gap-4 justify-center">
             <a
               href="/search"
               class="px-8 py-4 bg-white text-sage font-bold rounded-xl hover:bg-ivory transition-all shadow-lg hover:shadow-xl hover:-translate-y-1"
             >
               Search All Gyms
             </a>
             <a
               href="/blog"
               class="px-8 py-4 bg-sage-dark/30 text-white border border-white/30 font-bold rounded-xl hover:bg-sage-dark/50 transition-all backdrop-blur-sm"
             >
               Read Climbing Guides
             </a>
           </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
