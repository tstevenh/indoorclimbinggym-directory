---
/**
 * Bouldering Grade Conversion Tool
 * Interactive converter with V-Scale, Font, and UK Tech grades
 * Unique gym vs outdoor grade adjustment feature
 */

export const prerender = true;

import BaseLayout from '../../layouts/BaseLayout.astro';
import GradeSearchBar from '../../components/tools/GradeSearchBar.astro';
import GymOutdoorToggle from '../../components/tools/GymOutdoorToggle.astro';
import ConversionResults from '../../components/tools/ConversionResults.astro';
import ConversionTable from '../../components/tools/ConversionTable.astro';
import AffiliateBlock from '../../components/AffiliateBlock.astro';

// Import bouldering grades data
import boulderingGrades from '../../data/bouldering-grades.json';
import { AFFILIATE_PRODUCTS } from '../../data/affiliateProducts';

// SEO
const title = "Bouldering Grade Converter (Free) | V-Scale to Font";
const description = "Free bouldering grade converter: V-Scale, Fontainebleau & UK Tech. Gym vs outdoor adjustments included. Instant conversion VB-V17.";
const canonical = "https://www.indoorclimbinggym.com/tools/bouldering-grade-conversion";

// Breadcrumbs
const breadcrumbs = [
  { label: 'Home', url: '/' },
  { label: 'Tools', url: '/tools' },
  { label: 'Bouldering Grade Conversion', url: '/tools/bouldering-grade-conversion' },
];

// Structured data for Tool
const toolSchema = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "Bouldering Grade Conversion Tool",
  "description": "Free tool to convert bouldering climbing grades between V-Scale, Fontainebleau, and UK Technical grading systems with gym vs outdoor adjustments",
  "url": canonical,
  "applicationCategory": "UtilityApplication",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  },
  "featureList": [
    "V-Scale to Fontainebleau conversion",
    "V-Scale to UK Tech conversion",
    "Gym vs outdoor grade adjustment",
    "Confidence indicators for accuracy",
    "Full reference table (VB to V17)"
  ]
};

// FAQ Schema
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What is the V-Scale in bouldering?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "The V-Scale (Hueco Scale) is the most common bouldering grading system in the United States, ranging from VB (beginner) to V17 (world's hardest). It was developed by John 'Verm' Sherman at Hueco Tanks, Texas in the 1990s."
      }
    },
    {
      "@type": "Question",
      "name": "What is the difference between V5 and Font 6B?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "V5 and Font 6B are equivalent grades in different systems. V5 is the American V-Scale grade, while Font 6B is the French Fontainebleau grade. They represent the same approximate difficulty level - intermediate bouldering requiring advanced technique and finger strength."
      }
    },
    {
      "@type": "Question",
      "name": "Are gym grades softer than outdoor grades?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, indoor gym grades are typically 1-2 grades softer than outdoor grades at beginner to intermediate levels (VB-V6). This is intentional to encourage progression and build confidence. Advanced grades (V7+) tend to be more consistent between gym and outdoor climbing."
      }
    },
    {
      "@type": "Question",
      "name": "How accurate are bouldering grade conversions?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Accuracy varies by grade level. Beginner grades (V0-V3) have high confidence conversions that are well-established. Intermediate grades (V4-V6) have moderate accuracy with some regional variation. Elite grades (V11+) are more subjective and route-dependent, with lower confidence in conversions."
      }
    }
  ]
};

const schemas = [toolSchema, faqSchema];
---

<BaseLayout
  title={title}
  description={description}
  canonical={canonical}
  ogType="website"
  keywords={[
    'bouldering grades',
    'v scale converter',
    'fontainebleau grades',
    'uk tech grades',
    'climbing grade conversion',
    'v5 to font',
    'bouldering difficulty',
    'gym vs outdoor grades'
  ]}
  schema={schemas}
  breadcrumbs={breadcrumbs}
>
  <!-- Full-Width Hero Section -->
  <section class="w-screen relative left-1/2 right-1/2 -ml-[50vw] -mr-[50vw] -mt-8 bg-gradient-to-br from-sage/20 via-ivory to-sage/5 py-20 md:py-32 overflow-hidden">
    <!-- Decorative background elements -->
    <div class="absolute top-0 left-0 w-full h-full opacity-10 bg-[radial-gradient(#98a48b_1px,transparent_1px)] [background-size:20px_20px]"></div>
    
    <div class="container mx-auto px-4 relative z-10 text-center">
      <span class="inline-block py-1 px-3 rounded-full bg-sage/10 text-sage font-bold text-sm tracking-wide uppercase mb-6">
        Free Utility
      </span>
      <h1 class="text-5xl md:text-6xl font-bold text-granite mb-6 leading-tight">
        Bouldering Grade <span class="text-sage relative inline-block">
          Converter
