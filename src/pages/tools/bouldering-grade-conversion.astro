  </section>

  <!-- Tool Section (Overlapping Card) -->
  <section class="container mx-auto px-4 -mt-20 relative z-20 mb-20">
    <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-xl border border-gray-100 p-8 md:p-12">
