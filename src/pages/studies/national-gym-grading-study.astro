// SEO Configuration
const title = 'National Gym Grading Study | Climbing Grade Analysis';
const description = 'Comprehensive analysis of climbing gym grading across 40 U.S. facilities. Explore regional differences, wall styles, and grade variability data with downloadable dataset.';
const canonical = 'https://www.indoorclimbinggym.com/studies/national-gym-grading-study';
const keywords = ['climbing grades', 'gym grading study', 'climbing data', 'grade analysis', 'boulder grades', 'climbing research'];

// Citation text
const citationText = 'IndoorClimbingGym.com. (2025). National Gym Grading Study: Analysis of Grade Variability Across 40 U.S. Climbing Facilities. Retrieved from https://www.indoorclimbinggym.com/studies/national-gym-grading-study';

// Generate ScholarlyArticle schema
const scholarlyArticleSchema = generateScholarlyArticleSchema({
  title: studyMetadata.title,
