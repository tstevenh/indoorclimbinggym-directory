  publishedDate: studyMetadata.publishedDate,
  updatedDate: studyMetadata.updatedDate,
  author: 'IndoorClimbingGym.com Research Team',
  keywords: studyMetadata.tags,
  citation: citationText,
  gymsAnalyzed: studyMetadata.gymsAnalyzed
}, canonical);

// Generate Dataset schema
const datasetSchema = generateDatasetSchema({
  name: '40 U.S. Climbing Gym Grading Data',
