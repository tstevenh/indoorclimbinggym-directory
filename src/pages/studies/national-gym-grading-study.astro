  variablesMeasured: ['grading_difficulty', 'region', 'wall_style', 'gym_type', 'boulder_range', 'rope_range'],
  spatialCoverage: 'United States (18 states, 4 regions)',
  temporalCoverage: '2024-2025'
}, canonical);

// Breadcrumbs
const breadcrumbs = [
  { label: 'Home', url: 'https://www.indoorclimbinggym.com' },
  { label: 'Studies', url: 'https://www.indoorclimbinggym.com/studies' },
  { label: 'National Gym Grading Study', url: canonical }
];

const breadcrumbSchema = generateBreadcrumbSchema(breadcrumbs);

// Combine all schemas into @graph
const combinedSchema = {
  '@context': 'https://schema.org',
  '@graph': [scholarlyArticleSchema, datasetSchema, breadcrumbSchema]
};

// Study Statistics
const totalGyms = 40;
const regions = 4;
