--- 
/**
 * Contact Us Page
 * Get in touch with IndoorClimbingGym team
 */
import BaseLayout from '../layouts/BaseLayout.astro';

export const prerender = true;


// SEO configuration
const title = 'Contact Us - IndoorClimbingGym';
const description = 'Get in touch with IndoorClimbingGym. Whether you\'re a climber, gym owner, or business partner, we\'re here to help.';
const keywords = ['contact', 'support', 'gym owners', 'business inquiries', 'climbing gym directory', 'submit gym', 'claim listing'];
const canonical = 'https://www.indoorclimbinggym.com/contact';

const breadcrumbs = [
  { label: 'Home', url: '/' },
  { label: 'Contact', url: '/contact' },
];
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
  canonical={canonical}
  breadcrumbs={breadcrumbs}
>
  <!-- Full-Width Hero Section -->
  <section class="w-screen relative left-1/2 right-1/2 -ml-[50vw] -mr-[50vw] -mt-8 bg-gradient-to-br from-sage/20 via-ivory to-sage/5 py-20 md:py-32 overflow-hidden">
    <!-- Decorative background elements -->
    <div class="absolute top-0 left-0 w-full h-full opacity-10 bg-[radial-gradient(#98a48b_1px,transparent_1px)] [background-size:20px_20px]"></div>
    
    <div class="container mx-auto px-4 relative z-10 text-center">
      <span class="inline-block py-1 px-3 rounded-full bg-sage/10 text-sage font-bold text-sm tracking-wide uppercase mb-6">
        Get In Touch
      </span>
      <h1 class="text-5xl md:text-6xl font-bold text-granite mb-6 leading-tight">
        We'd Love to Hear <br/>
        <span class="text-sage relative inline-block">
          From You
          <svg class="absolute w-full h-3 -bottom-1 left-0 text-sage/30" viewBox="0 0 100 10" preserveAspectRatio="none">
            <path d="M0 5 Q 50 10 100 5" stroke="currentColor" stroke-width="8" fill="none" />
          </svg>
        </span>
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
        Whether you have a question about a gym, want to partner with us, or just want to say hi, our team is ready to answer all your questions.
      </p>
    </div>
  </section>

  <!-- Contact Cards (Overlapping) -->
  <section class="container mx-auto px-4 -mt-20 relative z-20 mb-24">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      
      <!-- Support Card -->
      <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8 text-center hover:-translate-y-1 transition-transform duration-300 group">
        <div class="w-16 h-16 bg-sage/10 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:bg-sage transition-colors duration-300">
          <svg class="w-8 h-8 text-sage group-hover:!text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-granite mb-2">Climber Support</h3>
        <p class="text-gray-500 mb-6 text-sm">Need help finding a gym or reporting an issue?</p>
        <a href="mailto:support@indoorclimbinggym.com" class="text-sage font-bold hover:text-sage/80 transition-colors">
          support@indoorclimbinggym.com
        </a>
      </div>

      <!-- Business Card -->
      <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8 text-center hover:-translate-y-1 transition-transform duration-300 group">
        <div class="w-16 h-16 bg-sage/10 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:bg-sage transition-colors duration-300">
          <svg class="w-8 h-8 text-sage group-hover:!text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-granite mb-2">Partnerships</h3>
        <p class="text-gray-500 mb-6 text-sm">Interested in advertising or working together?</p>
        <a href="mailto:business@indoorclimbinggym.com" class="text-sage font-bold hover:text-sage/80 transition-colors">
          business@indoorclimbinggym.com
        </a>
      </div>

      <!-- Gym Owner Card -->
      <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8 text-center hover:-translate-y-1 transition-transform duration-300 group">
        <div class="w-16 h-16 bg-sage/10 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:bg-sage transition-colors duration-300">
          <svg class="w-8 h-8 text-sage group-hover:!text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-granite mb-2">Gym Owners</h3>
        <p class="text-gray-500 mb-6 text-sm">Claim your listing or update your gym\'s details.</p>
        <a
          href={`${import.meta.env.PUBLIC_DASHBOARD_URL}/dashboard`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block bg-sage text-white px-6 py-2 rounded-lg font-bold hover:bg-sage/90 transition-all shadow-md hover:shadow-lg"
        >
          Go to Dashboard â†’
        </a>
      </div>

    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="container mx-auto px-4 mb-24">
    <div class="max-w-3xl mx-auto bg-gray-50 rounded-3xl p-8 md:p-12 border border-gray-100">
      <div class="text-center mb-10">
        <h2 class="text-3xl font-bold text-granite mb-4">Send us a Message</h2>
        <p class="text-gray-600">Fill out the form below and we\'ll get back to you as soon as possible.</p>
      </div>

      <!-- Tally Contact Form Embed -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <iframe
          data-tally-src="https://tally.so/embed/lbDllX?alignLeft=1&hideTitle=1&transparentBackground=1&dynamicHeight=1"
          loading="lazy"
          width="100%"
          height="500"
          frameborder="0"
          marginheight="0"
          marginwidth="0"
          title="Contact Form"
        ></iframe>
      </div>

      <!-- Tally Embed Script -->
      <script is:inline>
        var d=document,w="https://tally.so/widgets/embed.js",v=function(){"undefined"!=typeof Tally?Tally.loadEmbeds():d.querySelectorAll("iframe[data-tally-src]:not([src])").forEach((function(e){e.src=e.dataset.tallySrc}))};if("undefined"!=typeof Tally)v();else if(d.querySelector('script[src="'+w+'"]')==null){var s=d.createElement("script");s.src=w,s.onload=v,s.onerror=v,d.body.appendChild(s);}
      </script>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="container mx-auto px-4 mb-20">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold text-granite mb-12 text-center">Frequently Asked Questions</h2>
      
      <div class="space-y-6">
        <!-- FAQ 1 -->
        <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
          <h3 class="text-xl font-bold text-granite mb-3 flex items-center gap-3">
            <span class="w-8 h-8 bg-sage/10 rounded-full flex items-center justify-center text-sage text-sm font-bold">1</span>
            How do I submit a gym?
          </h3>
          <p class="text-gray-600 leading-relaxed pl-11">
            Gym owners can submit their facility through our <a href="${import.meta.env.PUBLIC_DASHBOARD_URL}/dashboard" class="text-sage font-medium hover:underline" target="_blank" rel="noopener noreferrer">Gym Owner Portal</a>. It's free, fast, and gives you control over your listing.
          </p>
        </div>

        <!-- FAQ 2 -->
        <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
          <h3 class="text-xl font-bold text-granite mb-3 flex items-center gap-3">
            <span class="w-8 h-8 bg-sage/10 rounded-full flex items-center justify-center text-sage text-sm font-bold">2</span>
            Is listing my gym free?
          </h3>
          <p class="text-gray-600 leading-relaxed pl-11">
            Yes! Basic listings are always free. We believe in open access to climbing information. We do offer premium features for enhanced visibility, but you never have to pay to be listed.
          </p>
        </div>

        <!-- FAQ 3 -->
        <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
          <h3 class="text-xl font-bold text-granite mb-3 flex items-center gap-3">
            <span class="w-8 h-8 bg-sage/10 rounded-full flex items-center justify-center text-sage text-sm font-bold">3</span>
            How do I report incorrect info?
          </h3>
          <p class="text-gray-600 leading-relaxed pl-11">
            If you see something wrong, please <a href="mailto:support@indoorclimbinggym.com" class="text-sage font-medium hover:underline">email us</a> with the gym name and the correct details. We verify and update listings within 48 hours.
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>