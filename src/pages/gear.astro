---
import BaseLayout from '../layouts/BaseLayout.astro';
import { AFFILIATE_PRODUCTS, type Product } from '../data/affiliateProducts';

const title = "Recommended Climbing Gear | Indoor Climbing Gym";
const description = "Expert-curated climbing gear reviews. We've tested the best indoor climbing shoes, harnesses, and training equipment to help you climb harder and safer.";

// Group products by category
const productsByCategory = AFFILIATE_PRODUCTS.reduce((acc, product) => {
  const category = product.category || 'other';
  if (!acc[category]) {
    acc[category] = [];
  }
  acc[category].push(product);
  return acc;
}, {} as Record<string, Product[]>);

const categoryTitles: Record<string, string> = {
  shoes: "Climbing Shoes",
  gear: "Essentials (Harnesses & Chalk)",
  training: "Training & Recovery",
  apparel: "Climbing Apparel",
  books: "Books & Guides"
};

const breadcrumbs = [
  { label: 'Home', url: '/' },
  { label: 'Recommended Gear', url: '/gear' },
];
---

<BaseLayout
  title={title}
  description={description}
  breadcrumbs={breadcrumbs}
>
  <!-- Full-Width Hero Section -->
  <section class="w-screen relative left-1/2 right-1/2 -ml-[50vw] -mr-[50vw] -mt-8 bg-gradient-to-br from-sage/20 via-ivory to-sage/5 py-20 md:py-28 overflow-hidden">
    <!-- Decorative background elements -->
    <div class="absolute top-0 left-0 w-full h-full opacity-10 bg-[radial-gradient(#98a48b_1px,transparent_1px)] [background-size:20px_20px]"></div>
    
    <div class="container mx-auto px-4 relative z-10 text-center">
      <span class="inline-block py-1 px-3 rounded-full bg-sage/10 text-sage font-bold text-sm tracking-wide uppercase mb-6">
        Curated by Experts
      </span>
      <h1 class="text-5xl md:text-6xl font-bold text-granite mb-6 leading-tight">
        Gear Up for the <span class="text-sage relative inline-block">
          Send
          <svg class="absolute w-full h-3 -bottom-1 left-0 text-sage/30" viewBox="0 0 100 10" preserveAspectRatio="none">
            <path d="M0 5 Q 50 10 100 5" stroke="currentColor" stroke-width="8" fill="none" />
          </svg>
        </span>
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
        Whether you're projecting V3 or training for 5.12, having the right gear makes all the difference. Here are our top picks for performance, comfort, and value.
      </p>
    </div>
  </section>

  <!-- Trust Signals / Value Props -->
  <section class="container mx-auto px-4 -mt-16 relative z-20 mb-20">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
      <div class="flex flex-col items-center text-center p-4">
        <div class="w-12 h-12 bg-sage/10 rounded-full flex items-center justify-center text-sage mb-4">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        </div>
        <h3 class="font-bold text-granite text-lg mb-2">Gym Tested</h3>
        <p class="text-sm text-gray-500">Every product listed has been put to the test on plastic walls and gym mats.</p>
      </div>
      <div class="flex flex-col items-center text-center p-4 border-t md:border-t-0 md:border-l border-gray-100">
        <div class="w-12 h-12 bg-sage/10 rounded-full flex items-center justify-center text-sage mb-4">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        </div>
        <h3 class="font-bold text-granite text-lg mb-2">Best Value</h3>
        <p class="text-sm text-gray-500">We prioritize gear that offers the best performance-to-price ratio for indoor climbers.</p>
      </div>
      <div class="flex flex-col items-center text-center p-4 border-t md:border-t-0 md:border-l border-gray-100">
        <div class="w-12 h-12 bg-sage/10 rounded-full flex items-center justify-center text-sage mb-4">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path></svg>
        </div>
        <h3 class="font-bold text-granite text-lg mb-2">Science Based</h3>
        <p class="text-sm text-gray-500">Training gear selected based on modern climbing physiology and recovery science.</p>
      </div>
    </div>
  </section>

  <div class="flex flex-col lg:flex-row gap-12 relative">
    <!-- Sticky Sidebar Navigation (Desktop) -->
    <aside class="hidden lg:block w-64 flex-shrink-0">
      <div class="sticky top-24 bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <h3 class="font-bold text-granite mb-4 uppercase text-xs tracking-wider">Categories</h3>
        <nav class="space-y-1">
          {Object.keys(productsByCategory).map((category) => (
            <a 
              href={`#${category}`} 
              class="flex items-center justify-between px-3 py-2 rounded-lg text-gray-600 hover:text-sage hover:bg-sage/5 transition-colors group"
            >
              <span>{categoryTitles[category] || category}</span>
              <span class="text-xs bg-gray-100 text-gray-400 px-2 py-0.5 rounded-full group-hover:bg-sage/20 group-hover:text-sage transition-colors">
                {productsByCategory[category].length}
              </span>
            </a>
          ))}
        </nav>
        <div class="mt-8 pt-6 border-t border-gray-100">
          <p class="text-xs text-gray-400 leading-relaxed">
            We earn a commission if you make a purchase, at no extra cost to you.
          </p>
        </div>
      </div>
    </aside>

    <!-- Main Product Feed -->
    <div class="flex-1 space-y-20">
      {Object.entries(productsByCategory).map(([category, products]) => (
        <section id={category} class="scroll-mt-24">
          <div class="flex items-end justify-between mb-8 pb-4 border-b border-gray-200">
            <div>
              <h2 class="text-3xl font-bold text-granite mb-2">
                {categoryTitles[category] || category}
              </h2>
              <p class="text-gray-500">
                {category === 'shoes' && "From aggressive boulders to comfy gym cruisers."}
                {category === 'gear' && "Don't leave home without these essentials."}
                {category === 'training' && "Level up your finger strength and power."}
              </p>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {products.map((product) => (
              <a 
                href={product.link}
                target="_blank"
                rel="noopener noreferrer sponsored"
                class="group bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 flex flex-col h-full"
              >
                <!-- Image Container with Badge -->
                <div class="relative h-72 bg-gradient-to-b from-gray-50 to-white p-8 flex items-center justify-center">
                  <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 bg-sage/5"></div>
                  <img 
                    src={product.imageUrl} 
                    alt={product.name} 
                    class="object-contain max-h-full max-w-full drop-shadow-md group-hover:scale-110 transition-transform duration-500 ease-out mix-blend-multiply"
                    loading="lazy"
                  />
                  {product.badge && (
                    <span class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm text-sage text-xs font-bold px-3 py-1.5 rounded-full shadow-sm border border-sage/20 flex items-center gap-1">
                      <svg class="w-3 h-3 text-yellow-400" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" /></svg>
                      {product.badge}
                    </span>
                  )}
                </div>

                <!-- Content -->
                <div class="p-6 flex flex-col flex-grow">
                  <div class="flex justify-between items-start mb-2">
                    <h3 class="text-xl font-bold text-granite group-hover:text-sage transition-colors leading-tight">
                      {product.name}
                    </h3>
                  </div>
                  
                  <p class="text-gray-600 text-sm mb-6 leading-relaxed flex-grow">
                    {product.description}
                  </p>
                  
                  <div class="mt-auto">
                    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-xl group-hover:bg-sage/5 transition-colors">
                      <div class="flex flex-col">
                        <span class="text-xs text-gray-400 uppercase font-semibold">Price</span>
                        <span class="text-xl font-bold text-gray-900">{product.price}</span>
                      </div>
                      <span class="w-10 h-10 bg-white rounded-full shadow-sm flex items-center justify-center text-sage group-hover:bg-sage group-hover:!text-white transition-all duration-300">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                        </svg>
                      </span>
                    </div>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </section>
      ))}
    </div>
  </div>

  <!-- Mobile Footer Disclaimer -->
  <div class="lg:hidden mt-16 p-6 bg-gray-50 rounded-xl text-xs text-gray-500 text-center leading-relaxed">
    <p>
      <strong>Affiliate Disclosure:</strong> IndoorClimbingGym.com is a participant in the Amazon Services LLC Associates Program. 
      We earn from qualifying purchases at no extra cost to you.
    </p>
  </div>
</BaseLayout>
