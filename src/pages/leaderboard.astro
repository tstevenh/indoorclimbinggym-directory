  // Fetch explorer leaderboard data
  async function loadExplorerLeaderboard() {
    const loading = document.getElementById('explorer-loading');
    const content = document.getElementById('explorer-content');
    const emptyState = document.getElementById('explorer-empty');
    const tableContainer = document.getElementById('explorer-table');

    try {
      const response = await fetch(`${dashboardUrl}/api/leaderboard`);
      const data = await response.json();

      loading?.classList.add('hidden');
      content?.classList.remove('hidden');

      const explorers = data.explorers || [];

      if (explorers.length === 0) {
        emptyState?.classList.remove('hidden');
        return;
      }

      // Render explorer rankings table
      if (tableContainer) {
        tableContainer.classList.remove('hidden');
        tableContainer.innerHTML = `
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="border-b-2 border-gray-100">
                  <th class="text-left py-4 px-4 font-semibold text-gray-500 text-sm uppercase tracking-wider">Rank</th>
                  <th class="text-left py-4 px-4 font-semibold text-gray-500 text-sm uppercase tracking-wider">Climber</th>
                  <th class="text-left py-4 px-4 font-semibold text-gray-500 text-sm uppercase tracking-wider">Gyms Visited</th>
                </tr>
              </thead>
              <tbody>
                ${explorers.slice(0, 20).map((explorer, index) => `
                  <tr class="border-b border-gray-50 hover:bg-gray-50/50 transition-colors ${index === 0 ? 'bg-yellow-50/50' : index === 1 ? 'bg-gray-50/30' : index === 2 ? 'bg-amber-50/30' : ''}">
                    <td class="py-5 px-4">
                      <div class="flex items-center">
                        ${index === 0 ? goldMedalSvg : index === 1 ? silverMedalSvg : index === 2 ? bronzeMedalSvg : `<span class="text-gray-500 font-bold text-lg w-8 text-center">#${index + 1}</span>`}
                      </div>
                    </td>
                    <td class="py-5 px-4">
                      <div class="font-bold text-granite text-lg">
                        ${explorer.username || 'Anonymous Climber'}
                      </div>
                    </td>
                    <td class="py-5 px-4">
                      <div class="flex items-center gap-3">
                        <svg class="w-6 h-6 text-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        <span class="text-2xl font-bold text-sage">${explorer.explorer_count}</span>
                      </div>
                    </td>
                  </tr>
                `).join('')}
              </tbody>
            </table>
          </div>
          <p class="text-xs text-gray-500 mt-6 text-center bg-gray-50 p-4 rounded-xl">
            Top 20 explorers shown. Private profiles appear as "Anonymous Climber".
          </p>
        `;
      }
    } catch (error) {
      console.error('Failed to load explorer leaderboard:', error);
      if (loading) {
        loading.innerHTML = `
          <div class="text-center py-12">
            <div class="w-16 h-16 bg-red-50 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-red-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <p class="text-red-500 font-medium">Failed to load rankings</p>
            <p class="text-sm text-gray-500 mt-1">Please try again later</p>
          </div>
        `;
      }
    }
  }

  // Load both leaderboards on page load
  loadCityLeaderboard();
  loadExplorerLeaderboard();
</script>
